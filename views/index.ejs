<!DOCTYPE html>
<html>
<head lang="en">
  <meta charset="UTF-8">
  <title>Movie Graph</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <script src="/javascripts/angular.min.js"></script>

  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">

  <!-- Optional theme -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css">

  <!-- Latest compiled and minified JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
</head>

<body ng-app="thmmovies" >


<div ng-controller="test">

  <div class="row moviegraphSearch">
    <div class="col-lg-6">
      <div class="input-group">
        <input type="text" class="form-control" ng-model="keyword" ng-change="runQuery()">
      <span class="input-group-btn">
        <button class="btn btn-default" type="button">Go!</button>
      </span>
      </div><!-- /input-group -->
    </div><!-- /.col-lg-6 -->
  </div><!-- /.row -->

  <div class="row featurette">
    <div class="col-md-5" style="visibility: {{keywordPicture_visibility}}">
      <img class="featurette-image img-responsive" data-src="{{keywordPicture}}" alt="500x500" src="data:image/svg+xml;base64," data-holder-rendered="true">
    </div>

    <div class="col-md-7">
      <h2 class="featurette-heading" style="visibility: {{keyword_visibility}}">{{keyword}} <span class="text-muted">{{keywordType}}</span></h2>
      <p class="lead">{{subscription}}</p>
      <div class="well well-sm" style="visibility: {{thmlocation_visibility}}"><span class="glyphicon glyphicon-inbox" aria-hidden="true"></span> {{thmlocation_location}}: {{thmlocation_room}} > {{thmlocation_shelf}}</div>
      <h2 class="featurette-heading"><span class="text-muted">{{subtitel}}</span></h2>

      <div class="row">
        <div class="col-xs-6 col-md-3" ng-repeat="film in films">
          <div class="thumbnail" ng-click="newKeyWord(film)" style="cursor: pointer;">
            <img data-src="holder.js/50x50" class="img-circle" alt="300x300" src="{{film.picture}}" style="height: 100px;">
            <p class="text-capitalize text-center">{{film.name}}</p>
          </div>
        </div>
      </div>

      <div class="row">
      <div class="col-xs-6 col-md-3" ng-repeat="filmstar in filmstarts">
          <div class="thumbnail" ng-click="newKeyWord(filmstar)" style="cursor: pointer;">
            <img data-src="holder.js/50x50" class="img-circle" alt="300x300" src="{{filmstar.picture}}" style="height: 100px;">
            <p class="text-capitalize text-center">{{filmstar.name}}</p>
          </div>
        </div>
      </div>

    </div>
  </div>


<!--  <div ng-repeat="result in results" class="list-group">
    <li class="list-group-item"> {{ result.id }} </li>
  </div>-->
</div>

<script src="/javascripts/app.js"></script>

</body>
</html>